snippet "for([^ ]+) " "auto for loop" brA
for (auto& `!p snip.rv = match.group(1)` : ${1:arr}) {
	$0
}
endsnippet

snippet "for " "for loop" brA
for (int ${1:i}; `!p snip.rv = t[1]` = 0; `!p snip.rv = t[1]` < sz) {
	$0
}
endsnippet

snippet "vt([bcis])" "vector" brA
vector<`!p
thing = {
	'b': 'bool',
	'c': 'char',
	'i': 'int',
	's': 'string',
}
snip.rv = thing[match.group(1)]
`> ${0:arr}
endsnippet
